{
  "name": "outside",
  "main": "dist/index.js",
  "type": "commonjs",
  "version": "0.0.1",
  "description": "A simple weather app built on Apple's WeatherKit REST service.",
  "scripts": {
    "clean": "npx rimraf dist static/script/client.js",
    "build:client": "npx rollup --config",
    "build:server": "npx tsc -p server && npx copy-files-from-to",
    "build": "npm run build:client && npm run build:server",
    "build:digitalocean": "npm install --include=dev && npm run build && npm ci",
    "dev": "npx nodemon",
    "start:dev": "npm run build:client && npx ts-node server/index.tsx",
    "start": "npm run build && node ./dist/server/index.js",
    "start:digitalocean": "node ./dist/server/index.js",
    "test": "npx jest"
  },
  "author": "Peter Kevin Contreras",
  "license": "GPL-3.0-only",
  "dependencies": {
    "classnames": "^2.5.1",
    "convert": "^5.0.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "fruit-company": "^0.0.3",
    "geo-tz": "^8.0.2",
    "http-terminator": "^3.2.0",
    "i18next": "^23.11.1",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-middleware": "^3.5.0",
    "jsonwebtoken": "^9.0.2",
    "preact": "^10.20.2",
    "preact-render-to-string": "^6.4.2",
    "serene-front": "^0.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "copy-files-from-to": "^3.9.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "ts-jest": "^29.1.3",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.6.3",
    "typescript": "^5.4.4"
  },
  "engines": {
    "node": ">=20.0",
    "npm": ">=10.5.0"
  },
  "copyFiles": [
    {
      "from": "locales/**",
      "to": "dist/locales"
    },
    {
      "from": "static/**",
      "to": "dist/static"
    }
  ]
}
