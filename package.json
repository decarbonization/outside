{
  "name": "outside",
  "main": "dist/index.js",
  "type": "commonjs",
  "version": "0.0.1",
  "description": "A simple weather app built on Apple's WeatherKit REST service.",
  "scripts": {
    "build": "npx tsc && npx copy-files-from-to",
    "build:digitalocean": "npm install --production=false && npm run build && npm ci",
    "dev": "nodemon",
    "start:dev": "ts-node index.tsx",
    "start": "npm run build && node ./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Peter Kevin Contreras",
  "license": "GPL-3.0-only",
  "dependencies": {
    "classnames": "^2.5.1",
    "convert": "^5.0.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "geo-tz": "^8.0.2",
    "http-terminator": "^3.2.0",
    "i18next": "^23.11.1",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-middleware": "^3.5.0",
    "jsonwebtoken": "^9.0.2",
    "preact": "^10.20.2",
    "preact-render-to-string": "^6.4.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "copy-files-from-to": "^3.9.1",
    "nodemon": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.4"
  },
  "engines": {
    "node": ">=20.0",
    "npm": ">=10.5.0"
  },
  "copyFiles": [
    {
      "from": ".env",
      "to": "dist"
    },
    {
      "from": "locales/**",
      "to": "dist/locales"
    },
    {
      "from": "public/**",
      "to": "dist/public"
    }
  ]
}
